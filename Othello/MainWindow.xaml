<Window x:Class="Othello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Othello Doge vs Grumpy Cat"
        Width="1080" 
        Height="720" 
        MinWidth="800"
        MinHeight="600">

    <DockPanel LastChildFill="True">
        <StackPanel x:Name="PanelTitle" Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="10" FontSize="36" FontFamily="Gill Sans" HorizontalAlignment="Center">Othello Doge VS Grumpy Cat</TextBlock>
        </StackPanel>

        <StackPanel x:Name="PanelPlayer1" Orientation="Vertical" DockPanel.Dock="Left" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="10" FontSize="20" HorizontalAlignment="Center">Grumpy Cat</TextBlock>
            <Image Source="images/grumpy.png" Width="100" Height="100" Stretch="UniformToFill"/>
            <Button Margin="10" MinWidth="100">Pass</Button>
        </StackPanel>

        <StackPanel x:Name="PanelPlayer2" Orientation="Vertical" DockPanel.Dock="Right" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="10" FontSize="20" HorizontalAlignment="Center">Doge</TextBlock>
            <Image Source="images/doge.png" Width="100" Height="100" Stretch="UniformToFill"/>
            <Button Margin="10" MinWidth="100">Pass</Button>
        </StackPanel>

        <StackPanel x:Name="PanelControl" Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Margin="10" MinWidth="100" Click="ButtonNewGame">New Game</Button>
            <Button Margin="10" MinWidth="100" Click="ButtonSave">Save</Button>
            <Button Margin="10" MinWidth="100" Click="ButtonLoad">Load</Button>
            <TextBlock Margin="10" FontSize="14" TextAlignment="Right" HorizontalAlignment="Right">Axel Rieben and Killian Castella</TextBlock>
        </StackPanel>

        <Grid x:Name="GridBoard" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="500" MinHeight="500" Background="Pink">
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="*" />
                <ColumnDefinition  Width="*" />
                <ColumnDefinition  Width="*" />
                <ColumnDefinition  Width="*" />
                <ColumnDefinition  Width="*" />
                <ColumnDefinition  Width="*" />
                <ColumnDefinition  Width="*" />
                <ColumnDefinition  Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition  Height="*" />
                <RowDefinition  Height="*" />
                <RowDefinition  Height="*" />
                <RowDefinition  Height="*" />
                <RowDefinition  Height="*" />
                <RowDefinition  Height="*" />
                <RowDefinition  Height="*" />
                <RowDefinition  Height="*" />
            </Grid.RowDefinitions>
        </Grid>

    </DockPanel>
</Window>